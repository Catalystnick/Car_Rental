<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup"
        android:orientation="vertical"
        android:background="@drawable/emp"
        android:padding="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toadd"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:text="add New Employee"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/welcome"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee List"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:transitionName="logoText"/>

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click To Edit Or Delete Employee"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="18sp"
            android:transitionName="desc_transition"/>

        <ListView
            android:id="@+id/emp_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:textAlignment="center"
            />






    </LinearLayout>




</RelativeLayout>

