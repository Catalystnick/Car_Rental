<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_screen"
    android:orientation="vertical">
<!--<ScrollView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="wrap_content">-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#BC9797"
        android:padding="20dp"
        >

        <Button
            android:id="@+id/logout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="logout"
            android:text="@string/logout"
            />




        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@android:drawable/picture_frame"
            android:layout_centerVertical="true"
            />

        <TextView

            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp" />

        <TextView

            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textSize="20sp"
            android:fontFamily="sans-serif"

            android:layout_below="@+id/UserName"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp" />






    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginTop="-100dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            app:cardElevation="10dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/common_full_open_on_phone" />

                <TextView
                    android:id="@+id/Payment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="$123"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/Payment_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Payment_label"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="40"
                    android:textSize="40sp" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            app:cardElevation="10dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="20sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/common_full_open_on_phone"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/Booking_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$123"
                    android:includeFontPadding="false"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_centerInParent="true">
                </TextView>


                <TextView
                    android:id="@+id/Booking_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="40sp"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif"
                    android:layout_below="@+id/Booking_label"
                    android:layout_centerHorizontal="true">
                </TextView>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        >


    </LinearLayout>





<!--</ScrollView>-->

    <Button
        android:id="@+id/manageprofile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="ManageProfile"
        android:text="Manage Profile" />

    <Button
        android:id="@+id/bookcar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="bookCar"
        android:text="Book a car" />



</LinearLayout>